{{! Contents of the "message info" popup }}
<section class="popover-lists info_popover_actions" id="user_info_popover" data-user-id="{{user_id}}">
    {{!-- Display selected custom profile fields in this popover. --}}

    {{#if spectator_view}}
    <ul class="popover-lists__list">
        <li class="popover-lists__text-item only-visible-for-spectators">{{#tr}}Joined {date_joined}{{/tr}}</li>
    </ul>
    {{/if}}

    {{#if (and user_time is_active)}}
    <ul class="popover-lists__list popover-lists__time-row">
        <li class="popover-lists__text-item hidden-for-spectators local_time">
            <i class="zulip-icon zulip-icon-clock"></i>
            {{#tr}}{user_time}{{/tr}}
        </li>
        <li class="popover-lists__text-item hidden-for-spectators local_time">
            {{!-- <i class="zulip-icon zulip-icon-past-time"></i> --}}
            {{user_last_seen_time_status}}
        </li>
    </ul>
    {{/if}}

    {{#unless spectator_view}}
    <ul class="popover-lists__list">
        {{#if is_active }}
            {{#if show_email}}
            {{!-- This div is added to enable interactivity for tooltip - https://atomiks.github.io/tippyjs/v5/accessibility/#interactivity --}}
            <div>
                <li class="popover-lists__link-item user_popover_email">
                    <a data-clipboard-text="{{ user_email }}">
                        <span class="nowrap">{{ user_email }}</span>
                        <i class="zulip-icon zulip-icon-copy hide_copy_icon"></i>
                        <span class="success_copy_text">{{#tr}}Copied{{/tr}}</span>
                    </a>
                </li>
            </div>
            {{/if}}
        {{else}}
            <li class="popover-lists__text-item user_popover_email half-opacity italic">
                {{#if is_bot}}
                {{#tr}}This bot has been deactivated.{{/tr}}
                {{else}}
                {{#tr}}This user has been deactivated.{{/tr}}
                {{/if}}
            </li>
        {{/if}}

        {{#each display_profile_fields}}
            {{#if this.is_link}}
            <li data-type="{{this.type}}" class="popover-lists__link-item field-section custom_user_field" data-field-id="{{this.id}}">
                <a tabindex="0" href="{{this.value}}" target="_blank" rel="noopener noreferrer" class="value tippy-zulip-tooltip" data-tippy-content="{{this.name}}">
                    <i class="zulip-icon zulip-icon-f-globe"></i>
                    <span class="nowrap">{{this.value}}</span>
                </a>
            </li>
            {{else if this.is_external_account}}
            <li data-type="{{this.type}}" class="popover-lists__link-item" data-field-id="{{this.id}}">
                <a tabindex="0" href="{{this.link}}" target="_blank" rel="noopener noreferrer" class="value tippy-zulip-tooltip" data-tippy-content="{{this.name}}">
                    {{#if (eq this.subtype "github") }}
                    <i class="zulip-icon zulip-icon-fa-github"></i>
                    {{else if (eq this.subtype "twitter") }}
                    <i class="zulip-icon zulip-icon-twitter"></i>
                    {{/if}}
                    <span class="nowrap">{{this.value}}</span>
                </a>
            </li>
            {{else}}
            <li class="popover-lists__text-item">
                {{#if this.rendered_value}}
                <span class="nowrap rendered_markdown tippy-zulip-tooltip" data-tippy-content="{{this.name}}">{{rendered_markdown this.rendered_value}}</span>
                {{else}}
                <span class="nowrap tippy-zulip-tooltip" data-tippy-content="{{this.name}}">{{this.value}}</span>
                {{/if}}
            </li>
            {{/if}}
        {{/each}}

        <li class="popover-lists__link-item">
            <a tabindex="0" class="view_full_user_profile">
                {{#if is_me}}
                <i class="zulip-icon zulip-icon-account"></i>
                {{#tr}}View your profile{{/tr}}
                {{else}}
                <i class="zulip-icon zulip-icon-account"></i>
                {{#tr}}View profile{{/tr}}
                {{/if}}
            </a>
        </li>

        <li class="popover-lists__link-item">
            <a href="{{ pm_with_url }}" class="narrow_to_private_messages">
                <i class="zulip-icon zulip-icon-mail"></i>
                {{#if is_me}}
                {{#tr}}View messages with yourself{{/tr}}
                {{else}}
                {{#tr}}View private messages{{/tr}}
                {{/if}}
            </a>
        </li>
    </ul>

    {{#unless is_me}}
    <ul class="popover-lists__list">
        <li class="popover-lists__link-item">
            <a tabindex="0" class="mention_user" data-clipboard-text="{{ user_mention_syntax }}">
                <i class="zulip-icon zulip-icon-at-sign"></i>
                {{#tr}}Reply mentioning user{{/tr}}
            </a>
        </li>
        <li class="popover-lists__link-item">
            <a href="{{ sent_by_uri }}" class="narrow_to_messages_sent">
                <i class="zulip-icon zulip-icon-message-square"></i>
                {{#tr}}View messages sent{{/tr}}
            </a>
        </li>
    </ul>
    {{/unless}}

    {{#if show_manage_menu}}

    {{#unless is_me}}
    <ul class="popover-lists__list">
        {{#if can_mute}}
        <li class="popover-lists__link-item">
            <a href="" class="narrow_to_messages_sent mute_user">
                <i class="zulip-icon zulip-icon-visibility-off"></i>
                {{#tr}}Mute this user{{/tr}}
            </a>
        </li>
        {{/if}}
        {{#if can_unmute}}
        <li class="popover-lists__link-item">
            <a href="" class="narrow_to_messages_sent unmute_user">
                <i class="zulip-icon zulip-icon-visibility"></i>
                {{#tr}}Unmute this user{{/tr}}
            </a>
        </li>
        {{/if}}

        {{#if can_manage_user}}
        {{#if is_active}}
        <li class="popover-lists__link-item">
            <a tabindex="0" class="sidebar-popover-manage-user">
                <i class="zulip-icon zulip-icon-badge"></i>
                {{#if is_bot}}
                {{#tr}}Manage this bot{{/tr}}
                {{else}}
                {{#tr}}Manage this user{{/tr}}
                {{/if}}
            </a>
        </li>
        {{else}}
        <li class="popover-lists__link-item">
            <a tabindex="0" class="sidebar-popover-reactivate-user">
                <i class="zulip-icon zulip-icon-badge"></i>
                {{#if is_bot}}
                {{#tr}}Reactivate this bot{{/tr}}
                {{else}}
                {{#tr}}Reactivate this user{{/tr}}
                {{/if}}
            </a>
        </li>
        {{/if}}
        {{/if}}
    </ul>
    {{/unless}}
    {{/if}}
    {{/unless}}
</section>
